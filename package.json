{
  "name": "react-storefront",
  "version": "7.0.0",
  "description": "React Storefront",
  "module": "./index.js",
  "license": "Apache-2.0",
  "directories": {
    "test": "test"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src"
      ],
      "ignore": "*/index.js",
      "extensions": "js",
      "quiet": false
    }
  },
  "scripts": {
    "release": "yarn build && cd dist && yarn publish && cd ..",
    "test": "jest",
    "watch": "npm-watch",
    "push-build": "yarn build && cd dist && yalc push && cd ..",
    "create-indexes": "create-index -ri --banner \"/**\n * @license\n * Copyright Â© 2017-2020 Moov Corporation.  All rights reserved.\n */\" src",
    "clean": "mkdir -p dist; cd dist; ls | grep -v 'node_modules\\|package-lock.json' | xargs rm -rf; cd ../;",
    "build": "yarn build:prep && yarn build:assets && NODE_ENV=production yarn build:sources",
    "build:prep": "yarn run clean && yarn create-indexes && cp package.json dist",
    "build:assets": "sync-folders --type copy webpack service-worker dist",
    "build:sources": "babel ./src --source-maps --out-dir dist",
    "storybook": "start-storybook -c ./.storybook"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@material-ui/core": "latest",
    "@material-ui/icons": "latest",
    "@material-ui/lab": "^4.0.0-alpha.35",
    "@material-ui/styles": "latest",
    "clsx": "^1.0.4",
    "delegate": "^3.2.0",
    "formidable": "^1.2.1",
    "isomorphic-unfetch": "^3.0.0",
    "next-offline": "^4.0.6",
    "path-to-regexp": "^3.1.0",
    "qs": "^6.9.0",
    "react-image-magnify": "^2.7.4",
    "react-swipeable-views": "^0.13.3",
    "react-swipeable-views-utils": "^0.13.3",
    "react-visibility-sensor": "^5.1.1",
    "resize-observer-polyfill": "^1.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@storybook/react": "^5.2.6",
    "@svgr/webpack": "^4.3.3",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.2",
    "jest-fetch-mock": "^2.1.2",
    "jsdom": "^15.2.1",
    "next": "^9.1.6",
    "npm-watch": "^0.6.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "sync-folders": "^2.0.0"
  },
  "peerDependencies": {
    "next": "^9.1.6"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ],
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "./test/config/jsdom.js",
    "setupFiles": [
      "./test/config/setup.js"
    ],
    "setupFilesAfterEnv": [
      "./test/config/mocks.js",
      "./node_modules/jest-enzyme/lib/index.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx}",
      "!**/index.js"
    ],
    "moduleNameMapper": {
      "react-storefront/(.*)": "<rootDir>/src/$1"
    }
  }
}
